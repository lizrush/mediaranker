 <%= form_tag books_path, :method => 'get' do %>
     <p>
         <%= text_field_tag :search, params[:search] %>
         <%= submit_tag "Search", :name => nil %>
     </p>
 <% end %>


<table class="table table-hover">
  <tr>
    <th> Upvotes </th>
    <th> Name </th>
    <th> Like it? </th>
  </tr>  
    <tr>
    	<% @books.each do |book| %>
      <td> <%= book.upvotes %> </td>
      <td> <%= link_to book.title, book_path(book) %>  </td>
      <td> <%= button_to "Upvote", upvote_book_path(book) %></td>
    </tr> <% end %>
  
    
</table>

<a class="btn btn-default" href="/">View All Media</a>
<a class="btn btn-default" href="/books/new">Add a Book</a>