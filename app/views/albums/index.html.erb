 <%= form_tag albums_path, :method => 'get' do %>
     <p>
         <%= text_field_tag :search, params[:search] %>
         <%= submit_tag "Search", :title => nil %>
     </p>
 <% end %>


<table class="table table-hover">
  <tr>
    <th> Upvotes </th>
    <th> Name </th>
    <th> Like it? </th>
  </tr>  
    <tr>
    	<% @albums.each do |album| %>
      <td> <%= album.upvotes %> </td>
      <td> <%= link_to album.title, album_path(album) %>  </td>
      <td> <%= button_to "Upvote", upvote_album_path(album) %></td>
    </tr> <% end %>
  
    
</table>

<a class="btn btn-default" href="/">View All Media</a>
<a class="btn btn-default" href="/albums/new">Add an album</a>