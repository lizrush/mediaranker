
 <%= form_tag movies_path, :method => 'get' do %>
     <p>
         <%= text_field_tag :search, params[:search] %>
         <%= submit_tag "Search", :name => nil %>
     </p>
 <% end %>


<table class="table table-hover">
  <tr>
    <th> Upvotes </th>
    <th> Name </th>
    <th> Like it? </th>
  </tr>  
    <tr>
    	<% @movies.each do |movie| %>
      <td> <%= movie.upvotes %> </td>
      <td> <%= link_to movie.title, movie_path(movie) %>  </td>
      <td> <%= button_to "Upvote", upvote_movie_path(movie) %></td>
    </tr> <% end %>
  
    
</table>

<a class="btn btn-default" href="/">View All Media</a>
<a class="btn btn-default" href="/movies/new">Add a Movie</a>
